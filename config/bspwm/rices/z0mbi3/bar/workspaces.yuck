;; Workspaces ;;
(deflisten workspace0 "scripts/WorkSpaces LVDS-1")
(deflisten workspace1 "scripts/WorkSpaces VGA-1")
;; Workspaces Widgets ;;
(defwidget workspace0 [] (literal :content workspace0))
(defwidget workspace1 [] (literal :content workspace1))
;; Workspaces Main Widget ;;
(defwidget workspaces [monitor]
   (box    :orientation "v"
           :space-evenly "false"
           :valign "start"
           (box :visible { monitor=="LVDS-1" } (workspace0))
           (box :visible { monitor=="VGA-1" } (workspace1))
))